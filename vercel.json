{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/my-account/pilot-documents/route.ts": {
      "maxDuration": 30,
      "maxRequestBodySize": "10mb"
    },
    "src/app/api/my-account/medical-certificates/route.ts": {
      "maxDuration": 30,
      "maxRequestBodySize": "10mb"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 